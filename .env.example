# Database
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# NextAuth (for CMS authentication)
NEXTAUTH_URL="https://your-cms-domain.com"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Google Gemini API
GOOGLE_GEMINI_API_KEY="your-gemini-api-key"

# Replicate API (for image generation)
REPLICATE_API_TOKEN="your-replicate-token"

# Cloudinary (for image storage)
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# OR AWS S3 (alternative to Cloudinary)
AWS_S3_BUCKET="your-bucket-name"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"

# Redis (for caching and job queues)
REDIS_URL="redis://default:password@host:port"

# Vercel (for deployment automation)
VERCEL_TOKEN="your-vercel-api-token"
VERCEL_PROJECT_ID="your-project-id"
VERCEL_TEAM_ID="your-team-id" # Optional, if using team account

# Sentry (for error tracking - optional)
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# Clerk (for authentication - if using instead of NextAuth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Public URLs
NEXT_PUBLIC_APP_URL="https://your-main-domain.com"
NEXT_PUBLIC_CMS_URL="https://cms.your-domain.com"

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@your-domain.com"

# Feature Flags
ENABLE_AI_GENERATION="true"
ENABLE_IMAGE_GENERATION="true"
ENABLE_AUTO_DEPLOY="true"

# Development
NODE_ENV="production"